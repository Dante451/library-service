{
    "compilerOptions": {
      "target": "es6",        
      "module": "commonjs",                   
      "strict": true,                        
      "esModuleInterop": true,                
      "skipLibCheck": true,                  
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",              
      "rootDir": "./src",                    
      "moduleResolution": "node",         
      "resolveJsonModule": true,             
      "isolatedModules": true                
    },
    "include": [
      "src/**/*.ts"                            
    ],
    "exclude": [
      "node_modules"                          
    ]
  }
  